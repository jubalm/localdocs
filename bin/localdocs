#!/usr/bin/env node

/**
 * LocalDocs - Simple documentation downloader optimized for LLM workflows
 * Entry point that runs the compiled TypeScript version
 */

const path = require('path');
const fs = require('fs');

// Find the dist directory relative to this file
const distDir = path.join(__dirname, '..', 'dist');
const indexPath = path.join(distDir, 'index.js');

// Check if compiled version exists
if (!fs.existsSync(indexPath)) {
  console.error('LocalDocs has not been built yet. Please run:');
  console.error('  npm run build');
  console.error('');
  console.error('Or for development:');
  console.error('  npm run dev');
  process.exit(1);
}

// Run the compiled TypeScript version
const { runCLI } = require(indexPath);

// Execute the CLI
runCLI(process.argv).catch((error) => {
  console.error('Fatal error:', error);
  process.exit(1);
});