#!/usr/bin/env python3
"""
LocalDocs - Simple documentation downloader optimized for LLM workflows

This is the main entry point for the refactored LocalDocs application
with enhanced security, modular architecture, and improved performance.
"""

import sys
import os
from pathlib import Path

# Add the project root to Python path to enable imports
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))

try:
    from localdocs.cli import cli_main
    
    if __name__ == "__main__":
        cli_main()
        
except ImportError as e:
    print(f"Error: Could not import LocalDocs modules: {e}")
    print("Please ensure LocalDocs is properly installed.")
    sys.exit(1)
except Exception as e:
    print(f"Error: {e}")
    sys.exit(1)